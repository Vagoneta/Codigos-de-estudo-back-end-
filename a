//config inicial 
const express = required ('express')
const app = express()

//forma de ler JSON
app.use(
    express.urlencoded({
        extended: true
    })
)

app.use(express.json())

//rota inicial / end point
app.get('/', (req, res) =>{
    //mostrar requisiçaõ

    res.json({message: "Oi Express!"})
})

//entregar porta 
app.listen(3000)
